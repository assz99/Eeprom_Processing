//#include <EPPROM_PROCESSING.h>
#include <18F452.h>
#device ADC=10
#define EEPROM_SDA  PIN_C4
#define EEPROM_SCL  PIN_C3
#FUSES NOWDT                    //No Watch Dog Timer
#FUSES WDT128                   //Watch Dog Timer uses 1:128 Postscale
#FUSES NOBROWNOUT               //No brownout reset
#FUSES NOLVP                    //No low voltage prgming, B3(PIC16) or B5(PIC18) used for I/O

#use delay(crystal=20000000)
#use rs232(baud=9600,parity=N,xmit=PIN_C6,rcv=PIN_C7,bits=8,stream=PORT1)

#include <2416.C>
int16 rdado;
int16 i;
int16 res = 0;
EEPROM_ADDRESS endereco;

void main()
{
   //fprintf(PORT1,"Inicializando\n");
   setup_adc_ports(AN0);
   setup_adc(ADC_CLOCK_DIV_16);
   set_adc_channel(0);
   setup_timer_2(T2_DIV_BY_16,255,1);      //819 us overflow, 819 us interrupt

   setup_ccp1(CCP_PWM);
   set_pwm1_duty(0);
   init_ext_eeprom();

   while(TRUE)
   {
      //Funçao para leitura do Potenciomentro quando apertar o botao 1
      if(input_state(pin_b1) == 1)
      {
        // fprintf(PORT1,"Botao 1 Apertado\n");
         output_high(pin_d0);
         delay_ms(1000);
         output_low(pin_d0);
         
         for(i = 0; i < 20; i++)
         {
            res = read_adc();
            //fprintf(PORT1 , "Valor do POT: %Ld\n", res);
            
            fprintf(PORT1, " %Ld\n", res);
            write_ext_eeprom(endereco,res);
            res = res * 4;
            set_pwm1_duty(res);
            endereco = i;
            
            
            //fprintf(PORT1,"DEBUG");
            //fprintf(PORT1, "Passou ");
            //fprintf(PORT1, " %Ld\n",i);
            delay_ms(100);
         }
         set_pwm1_duty(0);
         output_high(pin_d0);
         delay_ms(1000);
         output_low(pin_d0);
      }
      //Funçao para mostrar os valores armazenados
      if(input_state(pin_b0) == 1)
      {  
         
     //    fprintf(PORT1,"Botao 2 Apertado\n");
         output_high(pin_d1);
         delay_ms(1000);
         output_low(pin_d1);;
         for(i = 0; i < 20; i++)
         {
            //fprintf(PORT1, "Passou %Lu\n Valor do POT lido: %Lu\n", i,rdado);
            endereco = i;
            rdado = read_ext_eeprom(endereco);
            fprintf(PORT1," %Ld\n", rdado); 
            rdado= rdado * 4;
            //fprintf(PORT1, "Passou %Lu\n Valor do POT lido: %Lu\n", i,rdado);
            set_pwm1_duty(rdado);
           
            delay_ms(100);
            
         }
         set_pwm1_duty(0);
         output_high(pin_d1);
         delay_ms(1000);
         output_low(pin_d1);
      }  
   }      
}
